<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/my_orders_text_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/seguisb"
        android:text="5 فبراير, الساعة 11:24"
        android:textColor="@color/my_orders_text1"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_orders_text_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/gibson_regular"
        android:text="40 EGP"
        android:textColor="@color/my_orders_text1"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/my_orders_text_Date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_orders_text_Date" />

    <TextView
        android:id="@+id/my_orders_text_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:text="جاري تحضير الطلب"
        android:textSize="12sp"
        android:fontFamily="@font/seguisb"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_orders_text_Date" />

    <TextView
        android:id="@+id/my_orders_text_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/seguisb"
        android:text="22 شارع سعد زغلول، فوق الكوبري العالي"
        android:textColor="@color/my_order_text2"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/my_orders_text_Status"
        app:layout_constraintTop_toBottomOf="@+id/my_orders_text_Status" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="11dp"
        android:background="@color/my_orders_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_orders_text_Address" />
</android.support.constraint.ConstraintLayout>